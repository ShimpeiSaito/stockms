<h2>ログイン</h2>
<%= link_to "会員登録はこちら", :new_account %>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :session, id: "login-form" do %>
    <div>
        <label>ログインID：</label>
        <input type="text" name="name">
    </div>
    <div>
        <label>パスワード：</label>
        <input type="password" name="password">
    </div>
    <div>
        <input type="submit" value="ログイン">
    </div>
<% end %>