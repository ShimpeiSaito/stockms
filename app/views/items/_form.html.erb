<%= render "shared/errors", obj: @item %>

<table class="attr">
  <tr>
    <th width="200"><%= form.label :name %></th>
    <td><%= form.text_field :name, size: 60 %></td>
  </tr>
  <tr>
    <th><%= form.label :amount %></th>
    <td><%= form.number_field :amount, min: 0, max: 50 %></td>
  </tr>
  <tr>
    <th><%= form.label :minimum %></th>
    <td><%= form.number_field :minimum, min: 0, max: 50 %></td>
  </tr>
  <tr>
    <th width="200"><%= form.label "カテゴリー選択" %></th>
    <td><%= form.select :category, [['食品系', '食品系'], ['飲み物系', '飲み物系'], ['ティッシュ系', 'ティッシュ系'], ['洗剤系', '洗剤系'], ['文房具系', '文房具系'], ['本系', '本系'], ['美容系', '美容系'], ['その他', 'その他']] %></td>
  </tr>
  <tr>
    <th><%= form.label :remarks %></th>
    <td><%= form.text_area :remarks, rows: 10, cols: 60 %></td>
  </tr>


</table>